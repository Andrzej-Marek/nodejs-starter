{
    "name": "words-learning-app",
    "version": "0.0.0",
    "description": "Backend for words learning extension and app",
    "main": "index.js",
    "scripts": {
        "clear": "rimraf dist",
        "build": "npm run clear && cross-env NODE_ENV=prod tsc",
        "start:dev": "npm run clear && cross-env NODE_ENV=dev ts-node-dev src/index.ts",
        "start:prod": "cross-env NODE_ENV=prod node ./dist/src/index.js",
        "check-types": "tsc",
        "pretty": "prettier --write src/**/*.ts",
        "lint": "eslint --ext .ts src",
        "lint:fix": "eslint --ext .ts src --fix",
        "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
        "test:watch": "cross-env NODE_ENV=test jest --watch --verbose --runInBand",
        "test:coverage": "cross-env NODE_ENV=test jest --verbose --coverage --runInBand",
        "precommit": "npm run lint:fix && npm run pretty && npm run check-types && git add ."
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.19.2",
        "body-parser": "^1.19.0",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "cors": "^2.8.5",
        "cross-env": "^7.0.2",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "inversify": "^5.0.1",
        "joi": "^17.3.0",
        "lodash": "^4.17.20",
        "module-alias": "^2.2.2",
        "moment": "^2.29.1",
        "node-fetch": "^2.6.1",
        "pg": "^8.4.1",
        "reflect-metadata": "^0.1.13",
        "routing-controllers": "^0.9.0-alpha.6",
        "typeorm": "^0.2.28",
        "typeorm-naming-strategies": "^1.3.0",
        "uuid": "^8.3.1",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/cors": "^2.8.8",
        "@types/express": "^4.17.8",
        "@types/jest": "^26.0.15",
        "@types/lodash": "^4.14.162",
        "@types/node": "^12.19.1",
        "@types/node-fetch": "^2.5.7",
        "@types/supertest": "^2.0.10",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^3.10.1",
        "@typescript-eslint/parser": "^3.10.1",
        "eslint": "^7.12.0",
        "eslint-config-prettier": "^6.14.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "4.3.0",
        "jest": "^26.6.1",
        "jest-cli": "^26.6.1",
        "nodemon": "^2.0.6",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "supertest": "^5.0.0",
        "ts-jest": "^26.4.2",
        "ts-node": "^8.10.2",
        "ts-node-dev": "^1.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.9.7"
    },
    "_moduleAliases": {
        "@": "./src"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run precommit"
        }
    }
}